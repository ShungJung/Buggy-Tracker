{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist",
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015.core",
      "es2015.promise",
      "es5",
      "esnext.array",
      "es2017.object",
      "es6",
      "es2015.iterable",
      "es2015.generator",
      "es2015.symbol",
      "es7"
    ],
    "paths": {
      "@/*": [
        "src/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "config",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/src/setupTests.ts"
  ]
}

