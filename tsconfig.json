{
  "compilerOptions": {
    "baseUrl": "./src/ts",
    "outDir": "./dist",
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "dom",
    ],
    "paths": {
      "@/*": [
        "src/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "config",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/src/setupTests.ts"
  ]
}

